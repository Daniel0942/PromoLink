FROM python:3.10-slim

# Atualizar e instalar dependências
RUN apt-get update && apt-get install -y \
    wget \
    unzip \
    curl \
    libnss3 \
    libxss1 \
    libasound2 \
    fonts-liberation \
    libappindicator3-1 \
    libgbm-dev \
    chromium \
    && rm -rf /var/lib/apt/lists/*

# Verificar se o binário do Chromium está no PATH.
RUN which chromium

# Configurar diretório de trabalho
WORKDIR /app

# Instalar dependências Python
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Expor porta para o Flask
EXPOSE 5000

# instalando chromedriver no container do docker
RUN apt-get update && apt-get install -y chromium-driver

# Caminho do chromium
ENV PATH="/path/to/chromedriver:${PATH}"
# Comando final para rodar o app
COPY . .
CMD ["python", "run.py"]